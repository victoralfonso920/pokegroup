<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fondoDetail"
        android:background="@drawable/background_gradient"
        tools:context=".Views.DetailPokemon">

    <LinearLayout
            android:id="@+id/btnAtrasDetP"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/FloatingMyLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/redball"
                app:srcCompat="@drawable/ic_back"
                app:fabCustomSize="@dimen/_35sdp"
                app:fabSize="auto"
                app:maxImageSize="@dimen/_20sdp"
        />
    </LinearLayout>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:elevation="@dimen/_5sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline" android:id="@+id/cardView">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_60sdp"
                android:orientation="vertical">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textName"
                    android:textColor="@color/text"
                    android:elevation="@dimen/_6sdp"
                    android:textSize="@dimen/_18sdp"
                    app:layout_constraintTop_toTopOf="@+id/guideline3"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="16dp"/>

            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:id="@+id/progress"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:max="100"
                    android:elevation="@dimen/_6sdp"
                    android:progress="100"
                    android:theme="@style/AppTheme.WhiteAccent"
                    app:layout_constraintTop_toBottomOf="@+id/textName"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"/>
            <TextView
                    android:id="@+id/healt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:elevation="@dimen/_6sdp"
                    android:text="HP0/0"
                    android:textColor="@color/text"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/progress"/>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/textType"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="\nTipo"
                        android:textColor="@color/text"
                />
                <View android:layout_width="@dimen/_1sdp"
                      android:layout_height="@dimen/_30sdp"
                      android:background="@color/colorLinea"/>
                <TextView
                        android:id="@+id/textPeso"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="0hgr\nPeso"
                        android:textColor="@color/text"
                />
                <View android:layout_width="@dimen/_1sdp"
                      android:layout_height="@dimen/_30sdp"
                android:background="@color/colorLinea"/>
                <TextView
                        android:id="@+id/textTan"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text="0dm\nMedida"
                        android:textColor="@color/text"

                />
            </LinearLayout>
            <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_2sdp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layerType="software"
                    android:background="@drawable/list_divider"/>

            <Button android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/agregar"
                    android:textAllCaps="false"
                    android:textColor="@color/redball"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_30sdp"
            android:background="@android:color/transparent"/>
            <ImageButton
                    android:id="@+id/closeDetP"
                    android:layout_width="@dimen/spacing_xxlarge"
                    android:layout_height="@dimen/spacing_xxlarge"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:srcCompat="@drawable/shape_moon"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.34"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="@dimen/_3sdp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout3">
        <TextView
                android:id="@+id/cptext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:textColor="@color/text"
                android:text="ex"/>
        <TextView
                android:id="@+id/textCpNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20sdp"
                android:textColor="@color/text"
                android:text="0"/>
    </LinearLayout>
    <com.marcinmoskala.arcseekbar.ArcSeekBar
            app:progressColor="@color/dorado"
            app:progressBackgroundColor="@color/negro"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:elevation="@dimen/_6sdp"
            app:progress="0"
            android:padding="20dp"
            app:maxProgress="300"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/arcSeekBar"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            android:elevation="@dimen/_6sdp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3" android:id="@+id/linearLayout3">
        <RelativeLayout
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:innerRadius="0dp"
                android:background="@drawable/circle_shape"
        >
            <ImageView
                    android:id="@+id/imgpokeDet"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:scaleType="centerCrop"
                    android:elevation="@dimen/_6sdp"
            />
            <ImageView
                    android:id="@+id/imgpokeBall"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:visibility="gone"
                    android:scaleType="centerCrop"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_marginEnd="@dimen/_3sdp"
                    android:src="@drawable/ic_pokeball"
                    android:elevation="@dimen/_6sdp"
            />
        </RelativeLayout>

    </LinearLayout>
    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.46"/>




</androidx.constraintlayout.widget.ConstraintLayout>