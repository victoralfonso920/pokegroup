<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fondoRegion"
        tools:context=".Views.DetailRegion">


    <ImageView
            android:id="@+id/imgholder"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_margin="@dimen/_minus5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="-20dp"
            android:src="@drawable/ic_pokeball"
            android:layout_marginEnd="-20dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ImgRegion"/>
    <com.victordev.pokegroup.utils.BottomCropImage
            android:id="@+id/ImgRegion"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_230sdp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:src="@drawable/kanto"
            android:scrollY="@dimen/_minus8sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="-20dp"
            android:layout_marginEnd="-20dp" app:layout_constraintHorizontal_bias="0.0"/>

    <LinearLayout
            android:id="@+id/btnAtras"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/FloatingMyLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:backgroundTint="@color/redball"
                app:srcCompat="@drawable/ic_back"
                app:fabCustomSize="@dimen/_35sdp"
                app:fabSize="auto"
                app:maxImageSize="@dimen/_20sdp"
        />
    </LinearLayout>
    <TextView
            android:id="@+id/textIndicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:text="@string/pokemons_de_la_region"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/ImgRegion"
            android:layout_marginTop="8dp"/>
    <LinearLayout
            android:id="@+id/linError"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textIndicacion"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp">
        <ImageView
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_150sdp"
                android:src="@drawable/pokemon_error"/>
        <TextView
                android:id="@+id/textError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_15sdp"
                android:text="@string/no_existen_datos_de_esta_region"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/GridCentral"
            android:layout_weight="1"
            android:padding="@dimen/_8sdp"
            android:scrollbarThumbVertical="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textIndicacion"
            tools:listitem="@layout/item_pokemon"
            android:layout_marginEnd="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>