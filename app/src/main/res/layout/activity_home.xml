<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:indefinite_pager_indicator="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fondoHome"
        tools:context=".Views.HomeActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:gravity="bottom|left"
            android:orientation="horizontal"
            android:id="@+id/linearLayout">
        <ImageView
                android:id="@+id/avatar"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:scaleType="centerCrop"/>
        <TextView
                android:id="@+id/textEventos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hola"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/negro"
                android:textSize="@dimen/_20sdp"
        />
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/menu"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_30sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            android:id="@+id/textView"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            android:layout_marginTop="@dimen/_15sdp"
            android:id="@+id/linearLayout2">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/FloatingMyLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/green"
                    app:srcCompat="@drawable/ic_brightness_2_black_24dp"
                    app:fabCustomSize="@dimen/_35sdp"
                    app:fabSize="auto"
                    app:maxImageSize="@dimen/_20sdp"
            />
            <TextView
                    android:id="@+id/textMenu1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:text="@string/tema"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/FloatingPokemon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/purple"
                    app:srcCompat="@drawable/ic_poke_ico"
                    app:fabCustomSize="@dimen/_35sdp"
                    app:fabSize="auto"
                    app:maxImageSize="@dimen/_20sdp"
            />
            <TextView
                    android:id="@+id/textMenu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textSize="@dimen/_13sdp"
                    android:text="@string/pokemons"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_height="match_parent">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/FloatingGroups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:backgroundTint="@color/blue"
                    app:srcCompat="@drawable/ic_pokeballs"
                    app:fabCustomSize="@dimen/_35sdp"
                    app:fabSize="auto"
                    app:maxImageSize="@dimen/_20sdp"
            />
            <TextView
                    android:id="@+id/textMenu3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/_3sdp"
                    android:textSize="@dimen/_13sdp"
                    android:text="@string/grupos"/>
        </LinearLayout>


    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regiones_pokemon"
            android:id="@+id/textRegiones"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_marginTop="@dimen/_25sdp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/view_pager1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="@dimen/_42sdp"
            android:paddingEnd="@dimen/_42sdp"
            android:clipToPadding="false"
            android:scrollbarSize="@dimen/_3sdp"
            android:scrollbarThumbHorizontal="@color/colorAccent"
            android:scrollbars="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/textRegiones"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_8sdp"
            tools:listitem="@layout/item_regiones"/>
</androidx.constraintlayout.widget.ConstraintLayout>